<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="bus"
            type="com.mburakcakir.stationapp.network.model.Bus" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBus"
            loadImageFromUrl="@{bus.icon}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@id/txtRouteName"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtRouteName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@{bus.routeCode}"
            app:layout_constraintBottom_toBottomOf="@id/imgBus"
            app:layout_constraintEnd_toStartOf="@id/txtRemainingTime"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@id/imgBus"
            app:layout_constraintTop_toTopOf="@id/imgBus" />

        <TextView
            android:id="@+id/txtRemainingTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@{Integer.toString(bus.remainingTime) + ` min`}"
            app:layout_constraintBottom_toBottomOf="@id/imgBus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@id/txtRouteName"
            app:layout_constraintTop_toTopOf="@id/imgBus" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtRemainingTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>